@using TheGreatGrape.Common
@model TheGreatGrape.Web.ViewModels.Wines.WinesListViewModel
@{
    this.ViewData["Title"] = "All Wines";
}
<div>
    <h1 class="display-4 text-center">Wines</h1>
    <div class="row">
        @foreach (var item in Model.Wines)
        {
            <div class="d-flex align-items-center col-md-2">
                <div class="flex-shrink-0">
                    <img src="@item.ImageUrl" alt="..." width="175">
                </div>
                <div class="flex-grow-1 ms-3">
                    @item.Name
                </div>
            </div>
        }
    </div>
</div>