@using TheGreatGrape.Common
@model TheGreatGrape.Web.ViewModels.Wines.GetWinesViewModel
@{
    this.ViewData["Title"] = "All Wines";
}

<div class="text-center">
    <h1 class="display-4">Wines</h1>
    <p>
        <style>
            ul#menu li {
                display: inline
            }
        </style>
        <ul id="menu">
            @foreach (var item in Model.Wines)
            {
                <li>@item.Name</li>
            }
        </ul>
    </p>
</div>