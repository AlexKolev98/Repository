@using TheGreatGrape.Common
@model TheGreatGrape.Web.ViewModels.Wines.WinesListViewModel
<form method="post">

    <div class="row">
        @foreach (var item in Model.Wines)
        {
            <div class="card text-center" style="width: 13rem;">
                <img class="card-img-top" src="@item.ImageUrl" alt="Card image cap">
                <div class="card-body">
                    <h5 class="card-title"><a class="nav-link card-title" asp-controller="Wines" asp-action="ById" asp-route-id="@item.Id">@item.Name</a></h5>
                    <p class="card-text">$@item.Price</p>
                    <div class="card-link">

                         <input asp-area="Administration" asp-controller="Wines" asp-action="AllByNotApproved" type="submit" class="btn btn-primary" asp-route-id="@item.Id" asp-route-value="true" value="Approve"/>
                         <input asp-area="Administration" asp-controller="Wines" asp-action="AllByNotApproved" type="submit" class="btn btn-primary" asp-route-id="@item.Id" asp-route-value="false" value="Remove"/>
                    </div>
                </div>
            </div>
         }
    </div>
</form>
<partial name="_PagingPartial" model="@Model" />